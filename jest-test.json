{
  "reporters": [
    "default"
  ],
  "automock": false,
  "bail": false,
  "clearMocks": true,
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/index.js",
    "!**/test/**/*.js"
  ],
  "coverageDirectory": "reports/coverage/unit/",
  "coverageReporters": [
    "lcov",
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "moduleDirectories": [
    "node_modules"
  ],
  "modulePathIgnorePatterns": [],
  "resetMocks": false,
  "resetModules": false,
  "testMatch": [
    "**/test/**/*-test.js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "testURL": "http://localhost/",
  "verbose": true
}
